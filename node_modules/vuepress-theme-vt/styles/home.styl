#hero {
    p {
        margin: 0;
        line-height: 1.25;
    }
}

html:not(.dark) {
    .heroText .gradient {
        font-weight: bolder;
        color: var(--c-brand);
        background: -webkit-linear-gradient(315deg, #42d392 25%, #647eff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
}
