.vp-doc {
    ul, ol {
        list-style: none;

        li {
            position: relative;

            &:before {
                content: '';
                position: absolute;
                width: 5px;
                height: 5px;
                border-radius: 50%;
                background-color: rgba(60, 60, 60, 0.33);
                transition: background-color 0.5s;
                left: -1.25rem;
                top: 0.75rem;
            }
        }
    }
}